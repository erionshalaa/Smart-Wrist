@model W23G38.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" required />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                <div id="imagePreview" class="mt-2"></div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="AvailableUnits" class="control-label"></label>
                <input asp-for="AvailableUnits" class="form-control" required />
                <span asp-validation-for="AvailableUnits" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var imageUrlInput = document.getElementById('ImageUrl');

            imageUrlInput.addEventListener('input', function () {
                var imageUrl = imageUrlInput.value.trim();
                var imagePreview = document.getElementById('imagePreview');

                if (imageUrl !== "") {
                    var img = document.createElement('img');
                    img.src = imageUrl;
                    img.style.maxWidth = '100%';
                    img.style.height = 'auto';
                    img.style.display = 'block'; 

                    imagePreview.innerHTML = '';
                    imagePreview.appendChild(img);
                } else {
                    imagePreview.innerHTML = '';
                }
            });
        });
    </script>

}
